<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListViewView"
    android:background="#FFE4C4">

    <Button
        android:id="@+id/listViewButton"
        android:layout_width="110dp"
        android:layout_height="56dp"
        android:text="ListView"
        android:layout_marginStart="20dp"
        android:backgroundTint="#FAF9F6"
        android:textColor="@color/black"
        android:enabled="false"/>

    <Button
        android:id="@+id/customListViewButton"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Custom ListView"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FAF9F6"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/recyclerViewButton"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="RecyclerView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#FAF9F6"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/customListViewButton"
        android:layout_marginTop="10dp"/>
    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"/>

</RelativeLayout>